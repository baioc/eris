{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "D: Build project",
			"group": {
				"kind": "build",
				"isDefault": true,
			},
			"type": "shell",
			"command": "dub build --build debug",
			"problemMatcher": {
				"owner": "d",
				"fileLocation": ["relative", "${workspaceFolder}"],
				"pattern": {
					"regexp": "^(.*)\\((\\d+,\\d+)\\): (Error|Warning|Deprecation): (.*)$",
					"file": 1,
					"location": 2,
					"severity": 3,
					"message": 4,
				}
			},
			"presentation": {
				"echo": false,
				"clear": true,
				"reveal": "silent",
			},
		},
		{
			"label": "D: Run unittests",
			"group": {
				"kind": "test",
				"isDefault": false,
			},
			"type": "shell",
			"command": "dub test --main-file=test/main.d --compiler=ldc2 && ! ldd bc-eris-test-library",
			"problemMatcher": {
				"owner": "d",
				"fileLocation": ["relative", "${workspaceFolder}"],
				"pattern": {
					"regexp": "^.*: (.+):(\\d+): (.*)$",
					"file": 1,
					"line": 2,
					"message": 3,
				}
			},
			"presentation": {
				"echo": true,
				"clear": true,
				"reveal": "silent",
			},
		},
		{
			"label": "D: Test coverage",
			"group": {
				"kind": "test",
				"isDefault": true,
			},
			"type": "shell",
			"command": "dub test --main-file=test/main.d --coverage",
			"problemMatcher": {
				"owner": "d",
				"fileLocation": ["relative", "${workspaceFolder}"],
				"pattern": {
					"regexp": "^.+@(.+)\\((\\d+)\\): (.*)$",
					"file": 1,
					"location": 2,
					"message": 3,
				}
			},
			"presentation": {
				"echo": false,
				"clear": true,
				"reveal": "silent",
			},
		},
		{
			"label": "D: Generate docs",
			"group": {
				"kind": "build",
				"isDefault": false,
			},
			"type": "shell",
			"command": "dub run adrdox@2.5.3 -- . -i -o docs && sed -z 's/-contract {\\n\\s*display: none;\\n/-contract {\\n/' -i docs/style.css && dot -Tsvg deps.dot -o docs/deps.svg",
			"presentation": {
				"echo": true,
				"clear": true,
				"reveal": "silent",
			},
		},
		{
			"label": "D: Profile mode",
			"group": {
				"kind": "build",
				"isDefault": false,
			},
			"type": "shell",
			"command": "ldmd2 -preview=fieldwise -O -release -inline -g -I source/ -i test/main.d -of bc-eris-test-library",
			"presentation": {
				"echo": true,
				"clear": true,
			},
		},
		{
			"label": "D: View assembly",
			"group": {
				"kind": "build",
				"isDefault": false,
			},
			"type": "shell",
			"command": "ldmd2 -preview=fieldwise -O -release -inline -g -I source/ -i test/main.d -vasm && rm main main.o; ddemangle main.s > bc-eris-test-library.s",
			"presentation": {
				"echo": true,
				"clear": true,
				"reveal": "silent",
			},
		},
	],
}
