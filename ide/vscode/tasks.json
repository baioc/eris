{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "D: Run unittests",
			"group": {
				"kind": "test",
				"isDefault": false,
			},
			"type": "shell",
			"command": "dub test --main-file=tests/main.d --compiler=ldc2 && ! ldd eris-test-library",
			"problemMatcher": {
				"owner": "d",
				"fileLocation": ["relative", "${workspaceFolder}"],
				"pattern": {
					"regexp": "^.*: (.+):(\\d+): (.*)$",
					"file": 1,
					"line": 2,
					"message": 3,
				}
			},
			"presentation": {
				"echo": false,
				"clear": true,
			},
		},
		{
			"label": "D: Test coverage",
			"group": {
				"kind": "test",
				"isDefault": true,
			},
			"type": "shell",
			"command": "dub test --main-file=tests/main.d --coverage",
			"problemMatcher": {
				"owner": "d",
				"fileLocation": ["relative", "${workspaceFolder}"],
				"pattern": {
					"regexp": "^.+@(.+)\\((\\d+)\\): (.*)$",
					"file": 1,
					"location": 2,
					"message": 3,
				}
			},
			"presentation": {
				"echo": false,
				"clear": true,
			},
		},
		{
			"label": "D: Generate docs",
			"group": {
				"kind": "build",
				"isDefault": true,
			},
			"type": "shell",
			"command": "dub build --build=docs",
			"problemMatcher": {
				"owner": "d",
				"fileLocation": ["relative", "${workspaceFolder}"],
				"pattern": {
					"regexp": "^(.*)\\((\\d+,\\d+)\\): (Error|Warning|Deprecation): (.*)$",
					"file": 1,
					"location": 2,
					"severity": 3,
					"message": 4,
				}
			},
			"presentation": {
				"echo": false,
				"clear": true,
				"reveal": "silent",
			},
		},
		{
			"label": "D: Profile mode",
			"group": {
				"kind": "build",
				"isDefault": false,
			},
			"type": "shell",
			"command": "ldmd2 -wi -release -O -g -noboundscheck -Isource/ tests/main.d -oferis-test-library",
			"problemMatcher": {
				"owner": "d",
				"fileLocation": ["relative", "${workspaceFolder}"],
				"pattern": {
					"regexp": "^(.*)\\((\\d+,\\d+)\\): (Error|Warning|Deprecation): (.*)$",
					"file": 1,
					"location": 2,
					"severity": 3,
					"message": 4,
				}
			},
			"presentation": {
				"echo": false,
				"clear": true,
				"reveal": "silent",
			},
		},
	],
}
