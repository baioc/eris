{
	"name": "eris",
	"description": "A non-standard library for DasBetterC.",

	"license": "proprietary",
	"copyright": "Copyright Â© 2023, Gabriel B. Sant'Anna",
	"authors": ["Gabriel B. Sant'Anna"],

	"targetType": "library",
	"sourcePaths": ["source/"],
	"importPaths": [],

	"dependencies": {
		"eris:set": "*",
	},

	"toolchainRequirements": { "frontend": ">=2.101" },
	"buildRequirements": ["allowWarnings"],
	"buildTypes": {
		"debug": {
			"buildOptions": ["debugMode", "debugInfoC", "betterC"],
			"dflags-linux-ldc": ["-static"],
			"dflags-windows-ldc": ["-static"],
		},
		"release": {
			"buildOptions": ["releaseMode", "optimize", "inline", "betterC"],
			"dflags-linux-ldc": ["-static"],
			"dflags-windows-ldc": ["-static"],
		},
		"release-debug": {
			"buildOptions": ["releaseMode", "optimize", "inline", "debugInfoC", "betterC"],
			"dflags-linux-ldc": ["-static"],
			"dflags-windows-ldc": ["-static"],
		},
		"release-nobounds": {
			"buildOptions": ["releaseMode", "optimize", "inline", "noBoundsCheck", "betterC"],
			"dflags-linux-ldc": ["-static"],
			"dflags-windows-ldc": ["-static"],
		},
		"unittest": {
			"buildOptions": ["unittests", "debugMode", "debugInfoC", "betterC"],
			"dflags-linux-ldc": ["-static"],
			"dflags-windows-ldc": ["-static"],
		},
		"profile": {
			"buildOptions": ["profile", "optimize", "inline", "debugInfoC", "betterC"],
			"dflags-linux-ldc": ["-static"],
			"dflags-windows-ldc": ["-static"],
		},
		"unittest-cov": {
			"buildOptions": ["unittests", "coverage", "debugMode", "debugInfo"],
			"dflags": ["-main"],
		},
	},

	"subPackages": [
		{
			"name":"set",
			"description": "Static interfaces, helpers and some implementations for sets.",
			"targetType": "library",
			"sourcePaths": [],
			"sourceFiles": ["source/set.d"],
			"importPaths": [],
			"dflags": ["-mv=eris.set=$PACKAGE_DIR/source/set.d"],
		},
	],
}
